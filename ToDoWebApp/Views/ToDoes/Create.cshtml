@model ToDoWebApp.Models.ToDo
@using Microsoft.AspNetCore.Identity;
@inject UserManager<IdentityUser> userManager;

@{
    ViewData["Title"] = "Create";
    var toDoList = ViewData["ToDoList"] as IEnumerable<ToDoWebApp.Models.ToDo>;
}
<div class="container-fluid" style="width:90vw">
    <div class="d-flex justify-content-center align-items-center" style="background-color: rgba(34, 40, 49); padding: 1%; border-radius: 15px">
    <div>
        <partial name="NavLeftPartial" model="toDoList" />
    </div>
        <div class="flex-grow-1 ms-4" style="width: 80vw; height: 80vh; background-color: rgba(34, 40, 49); border: 2px solid rgba(118, 171, 174); border-radius: 15px; padding: 15px">
            <h4 style="color: rgba(118, 171, 174); text-align: center; font-size: 40px; text-transform: uppercase" class="mt-3">ToDo</h4>
            <hr style="color: rgba(118, 171, 174)" />
            <div style="background-color: lightblue; height: 80%; padding: 3%" class="d-flex justify-content-between align-items-center">
            <div class="container" style="background-color: lightgray">
            
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group  mb-3">
                        
                        <input asp-for="Title" class="form-control" placeholder="Title of your To-Do .." />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <textarea asp-for="Content" class="form-control" placeholder="Content of your To-Do .." style="height: 35vh"></textarea>
                       
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="CreationDate" class="form-control" value="@DateTime.Now" />
                        <span asp-validation-for="CreationDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="IsDone" class="form-control" value="false" />
                        <span asp-validation-for="IsDone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="UserId" class="form-control" value="@userManager.GetUserId(User)" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
                </div>
        
        </div>
    </div>
</div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
