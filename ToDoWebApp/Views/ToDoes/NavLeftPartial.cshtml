@model IEnumerable<ToDoWebApp.Models.ToDo>
@using Microsoft.AspNetCore.Identity;
@inject UserManager<IdentityUser> userManager;

<div class="container-fluid d-flex flex-column sidebar" style="width: 10vw; height: 80vh; background-color: rgba(34, 40, 49); border: 2px solid rgba(118, 171, 174); border-radius: 15px">
    <a class="btn btn-info d-flex justify-content-center align-items-center mb-2 mt-2" asp-action="Create" asp-controller="ToDoes" style="width: 100%; height: 10%; font-size: 18px; font-weight: 500">Create new</a>
    <hr style="color: rgba(118, 171, 174)" />
    <h3 style="color: white; font-size: 18px; font-weight: 700">Active ToDo's</h3>
    <div style="width: 100%; height: 40%; background-color: rgba(34, 40, 49); overflow-y: auto">
        
        <ul>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    if (item.IsDone == false)
                    {
                        <li style="list-style: none">
                            <a asp-action="Edit" asp-controller="ToDoes" asp-route-id="@item.Id" style="text-decoration: none; font-size: 14px; color: white; font-weight: 100">🟢 @item.Title</a>
                        </li>
                    }
                }
            }
            else
            {
                <li>No active ToDo's</li>
            }
        </ul>
    </div>
    <hr style="color: rgba(118, 171, 174)" />
    <h3 style="color: white; font-size: 18px; font-weight: 700">Finished ToDo's</h3>
    <div style="width: 100%; height: 40%; background-color: rgba(34, 40, 49); overflow-y: auto">
        <ul>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    if (item.IsDone == true)
                    {
                        <li style="list-style: none">
                            <a asp-action="Edit" asp-controller="ToDoes" asp-route-id="@item.Id" style="text-decoration: none; font-size: 14px; color: white; font-weight: 100">✔ @item.Title</a>
                        </li>
                    }
                }
            }
            else
            {
                <li>No finished ToDo's</li>
            }
        </ul>
    </div>
</div>
