@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="container-fluid d-flex justify-content-center align-items-center">
    <div class="d-flex justify-content-center align-items-center mt-3" style="width: 30vw; border: 2px solid rgba(118, 171, 174); border-radius: 15px">
        <div class="container" style="width: 40vw">
            <form id="account" method="post">
                <h2 style="color: rgba(118, 171, 174); text-align: center; font-size: 40px; text-transform: uppercase" class="mt-3">Log in</h2>
                <hr style="color: rgba(118, 171, 174)" />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-group mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="E-Mail" aria-required="true" style="color: white; background-color: rgba(255, 255, 255, 0.02); border-color: rgba(118, 171, 174)" />
                    
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" style="color: white; background-color: rgba(255, 255, 255, 0.02); border-color: rgba(118, 171, 174)"   />
                    
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label" style="color: white">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div class="d-flex justify-content-center">
                    <button id="login-submit" type="submit" class="btn btn-lg btn-primary" style="width: 10vw; background-color: rgba(118, 171, 174); border: none">Log in</button>
                </div>
                <div class="d-flex flex-column justify-content-center align-items-center">
                    <p class="mt-3">
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
